.user {
  width:100%;
  display: flex;
  font-size: 15px;
  font-family: Arial, Helvetica, sans-serif;
  margin-bottom: 5rpx;
  border-bottom: 2px #FAF0E6 solid;
  margin-top: 20rpx;
}
.information{
  display: flex;
  flex-direction: column;
  height:130rpx;
  margin-left: 30rpx;
  justify-content: space-around;
}
.user-avatar {
  border-radius: 65rpx;
  width: 130rpx;
  height: 130rpx;
  margin-left: 20rpx; 
}
.starlogo{
  width:30rpx;
  height:30rpx;
}
.btn-area{
  width:100rpx;
  height:60rpx;
  margin-left: 25rpx;
  color:aliceblue;
  background: black;
  line-height: 60rpx;
  text-align: center;
}
.sign{
  width:80rpx;
  height:50rpx;
  margin-left: 300rpx;
  border: 1px solid ghostwhite;
  border-radius: 25rpx;
  background:#6fa8dc;
  color:aliceblue;
  text-align: center;
  line-height: 50rpx;
}
.sex{
  height: 50rpx;
  display: flex;
  margin-top: 8rpx;
}
.textLine{
  border-bottom: 1px #111 dashed;
  border-top: 1px #111 dashed;
}
.coins{
  width:100%;
  display: flex;
  justify-content: space-around;
  font-size: 13px;
  color: #555;
  border-bottom: 5px solid #FAF0E6;
}
.coinId{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.coinNum{
  color:#6fa8dc;
  font-size: 20px;
}
.contains{
  width:100%;
  margin-top: 20rpx;
}
.contains image{
  width:50rpx;
  height:50rpx;
  margin-left: 20rpx;
  margin-top: 27rpx;
}
.message{
  width:100%;
  height: 100rpx;
  display: flex;
  color:#555;
  font-size: 15px;
  border-bottom: 1px solid #FAF0E6;
  line-height: 100rpx;
  justify-content: space-between;
}
.text{
  margin-right: 420rpx;
}
.more{
  margin-right: 30rpx;
}
#second{
  border-bottom: 5px solid #FAF0E6;
}
.footer{
  margin-top: 10rpx;
  color:goldenrod;
  font-size: 13px;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  text-align: center;

}
.phoneNum{
  color:#6fa8dc;
  text-decoration: underline;
}
button::after{
  border:none;
}
button{
  width:250rpx;
  font-size: 15px;
  color: #555;
  line-height: 100rpx;
  background: white;
}